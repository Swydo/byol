{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "automerge": true,
      "extends": [
        "schedule:earlyMondays"
      ],
      "groupName": "dependencies (non-major)",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": false,
      "extends": [
        "schedule:earlyMondays"
      ],
      "groupName": "dependencies",
      "matchUpdateTypes": ["major"]
    },
    {
      "matchPackageNames": ["dateformat"],
      "allowedVersions": "<5"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  }
}
