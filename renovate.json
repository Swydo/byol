{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "automerge": true,
      "groupName": "dependencies (non-major)",
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["schedule:earlyMondays"]
    },
    {
      "automerge": false,
      "groupName": "dependencies",
      "matchUpdateTypes": ["major"],
      "schedule": ["schedule:earlyMondays"]
    },
    {
      "matchPackageNames": ["dateformat"],
      "allowedVersions": "<5"
    }
  ]
}
